<%= form_for @bank_transaction, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :reported_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reported_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reported_amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reported_amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reported_description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reported_description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_complete, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :is_complete, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :card_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :card_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bank_transactions_path, :class => 'btn' %>
  </div>
<% end %>
