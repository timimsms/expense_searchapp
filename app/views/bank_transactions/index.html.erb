<p id="notice"><%= notice %></p>

<h1>Listing BankTransactions</h1>

<table>
  <thead>
    <tr>
      <th>Reported date</th>
      <th>Reported amount</th>
      <th>Reported description</th>
      <th>Is complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_transactions.each do |bank_transaction| %>
      <tr>
        <td><%= bank_transaction.reported_date %></td>
        <td><%= bank_transaction.reported_amount %></td>
        <td><%= bank_transaction.reported_description %></td>
        <td><%= bank_transaction.is_complete %></td>
        <td><%= link_to 'Show', bank_transaction %></td>
        <td><%= link_to 'Edit', edit_bank_transaction_path(bank_transaction) %></td>
        <td><%= link_to 'Destroy', bank_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

